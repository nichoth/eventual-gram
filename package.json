{
  "name": "my-app",
  "productName": "my-app",
  "version": "0.0.1",
  "description": "My Electron application description",
  "main": "public/main.js",
  "scripts": {
    "forge": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "pack": "electron-builder --dir",
    "dist": "npm run build-js && electron-builder",
    "tron": "npm run build-js && electron .",
    "copy": "cp src/server/* public/server",
    "build-js": "npm run copy && browserify --debug -p esmify src/index.js > public/bundle.js"
  },
  "build": {
    "appId": "your.id",
    "mac": {
      "category": "your.app.category.type"
    }
  },
  "keywords": [],
  "author": {
    "name": "nichoth",
    "email": "nichoth@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "my_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@nichoth/catch-routes": "^1.0.3",
    "@nichoth/events": "^1.1.2",
    "electron-squirrel-startup": "^1.0.0",
    "htm": "^3.0.4",
    "muxrpc": "^6.5.2",
    "observ": "^0.2.0",
    "observ-struct": "^6.0.0",
    "preact": "^10.5.12",
    "pull-stream": "^3.6.14",
    "pull-ws": "^3.3.2",
    "ruta3": "^2.0.1",
    "ssb-backlinks": "^2.1.1",
    "ssb-blobs": "^2.0.1",
    "ssb-caps": "^1.1.0",
    "ssb-config": "^3.4.5",
    "ssb-friends": "^4.4.3",
    "ssb-gossip": "^1.1.1",
    "ssb-invite": "^2.1.6",
    "ssb-keys": "^7.2.2",
    "ssb-master": "^1.0.3",
    "ssb-replicate": "^1.3.2",
    "ssb-serve-blobs": "^2.5.0",
    "ssb-server": "^15.3.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "browserify": "^17.0.0",
    "electron": "11.2.3",
    "electron-builder": "^22.9.1",
    "esmify": "^2.1.1"
  }
}
